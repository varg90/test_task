%h1.text-center.mb-2.mt-1= order.number
.row.mb-2
  .col-12
    = link_to edit_order_path(order) do
      %button.btn.btn-info.btn-lg.float-right Edit Order
%ul.list-group
  %li.list-group-item
    Customer email:
    = order.customer.email
  %li.list-group-item
    Order date:
    = order.date.strftime '%Y-%m-%d %T'
  %li.list-group-item
    Items:
    - order.order_items.each do |order_item|
      %h3.d-inline
        %span.badge.badge-secondary
          = order_item&.item&.title
          (#{order_item.quantity})
  %li.list-group-item
    Total Cost:
    = number_to_currency order.total, separator: ',', precision: 2
